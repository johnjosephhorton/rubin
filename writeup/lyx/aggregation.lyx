\begin_inset Formula 
\begin{equation}
\phi(\bar{\alpha})=\frac{\left(1-\theta_{M}-\theta_{H}\right)^{\frac{1}{\rho}}\,\left(1-\theta_{H}\,\tau_{H}^{\rho}\right)^{\frac{1}{\rho-1}}\,\left(\theta_{M}\,\tau_{M}^{\rho}\right)^{\frac{2-\rho}{1-\rho}}}{\rho(1-\rho)}\,\bar{\alpha}^{\,\frac{\rho}{1-\rho}}\,\left[1-\theta_{H}\,\tau_{H}^{\rho}-\left(1-\theta_{H}\,\tau_{H}^{\rho}\right)^{\frac{1}{\rho-1}}\,\left(\theta_{M}\,\tau_{M}^{\rho}\right)^{\frac{2-\rho}{1-\rho}}\,\bar{\alpha}^{\,\frac{1}{1-\rho}}\right]^{-\frac{1+\rho}{\rho}}\label{eq:phi-2}
\end{equation}

\end_inset


\end_layout

